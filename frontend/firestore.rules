rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can only read/write their own generations
    match /generations/{generationId} {
      // Allow read if user is authenticated and owns the generation
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Allow create if user is authenticated and sets their own userId
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow update/delete if user is authenticated and owns the generation
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
